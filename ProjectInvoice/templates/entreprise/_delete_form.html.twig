<form method="post" action="{{ path('app_entreprise_delete', {'id': entreprise.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entreprise.id) }}">
    
    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_entreprise_index') }}" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        
        <button class="btn btn-danger btn-lg shadow-sm">
            <i class="bi bi-trash"></i> Supprimer
        </button>
    </div>
</form>