{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <!-- Header for the page -->
    <div class="container mt-4">
        <h1 class="mb-4 text-center text-primary">Liste des Entreprises</h1>

        <!-- Table for displaying entreprises -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Entreprises enregistrées</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Mail</th>
                            <th>Adresse</th>
                            <th>Code Postal</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entreprise in entreprises %}
                        <tr>
                            <td>{{ entreprise.id }}</td>
                            <td>{{ entreprise.nom }}</td>
                            <td>{{ entreprise.mail }}</td>
                            <td>{{ entreprise.adressePostal }}</td>
                            <td>{{ entreprise.codepostal }}</td>
                            <td>
                                <a href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center">Aucune entreprise trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Button to create new entreprise -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_entreprise_new') }}" class="btn btn-success btn-lg">Créer une nouvelle entreprise</a>
        </div>
    </div>
{% endblock %}
