{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Factures</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Month</th>
                        <th scope="col">Total</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Updated At</th>
                        <th scope="col">PDF Path</th>
                        <th scope="col">Formateur</th>
                        <th scope="col">Invoice Inline</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for facture in factures %}
                        <tr>
                            <td>{{ facture.id }}</td>
                            <td>{{ facture.month|date('Y-m') }}</td>
                            <td>{{ facture.total }}</td>
                            <td>{{ facture.createdAt|date('Y-m-d H:i:s') }}</td>
                            <td>{{ facture.updatedAt ? facture.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ facture.pdfPath }}</td>
                            <td>{{ facture.formateurId ? facture.formateurId.nom : '' }}</td>
                            <td>{{ facture.invoiceInline ? facture.invoiceInline.Module : '' }}</td>
                            <td>
                                <a href="{{ path('app_facture_show', {'id': facture.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_facture_edit', {'id': facture.id}) }}" class="btn btn-warning btn-sm">Éditer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Aucun enregistrement trouvé</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_facture_new') }}" class="btn btn-success">Créer une nouvelle facture</a>
        </div>
    </div>
{% endblock %}