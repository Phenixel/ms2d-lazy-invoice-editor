{% extends 'base.html.twig' %}

{% block title %}Facture{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-primary">Facture</h1>

        <div class="card shadow-sm p-4">
            <div class="card-body">
                <!-- Informations de la facture -->
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Id</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.id }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Month</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.month|date('Y-m') }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Total</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.total }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Created At</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.createdAt|date('Y-m-d H:i:s') }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Updated At</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.updatedAt ? facture.updatedAt|date('Y-m-d H:i:s') : '' }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">PDF Path</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.pdfPath }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Formateur</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.formateurId ? facture.formateurId.nom : '' }}" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Invoice Line (Module)</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="{{ facture.invoiceInline ? facture.invoiceInline.Module : '' }}" readonly>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_facture_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_facture_edit', {'id': facture.id}) }}" class="btn btn-primary">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('facture/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}