{% extends 'base.html.twig' %}

{% block title %}Formateur Index{% endblock %}

{% block body %}
    <!-- Header for the page -->
    <div class="container mt-4">
        <h1 class="mb-4 text-center text-primary">Liste des Formateurs</h1>

        <!-- Table for displaying formateurs -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Formateurs enregistrés</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Mail</th>
                            <th>Adresse</th>
                            <th>Code Postal</th>
                            <th>Téléphone</th>
                            <th>Siret</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for formateur in formateurs %}
                        <tr>
                            <td>{{ formateur.id }}</td>
                            <td>{{ formateur.nom }}</td>
                            <td>{{ formateur.prenom }}</td>
                            <td>{{ formateur.mail }}</td>
                            <td>{{ formateur.adressePostal }}</td>
                            <td>{{ formateur.codePostal }}</td>
                            <td>{{ formateur.tel }}</td>
                            <td>{{ formateur.siret }}</td>
                            <td>
                                <a href="{{ path('app_formateur_show', {'id': formateur.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_formateur_edit', {'id': formateur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Aucun formateur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Button to create new formateur -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_formateur_new') }}" class="btn btn-success btn-lg">Créer un nouveau formateur</a>
        </div>
    </div>
{% endblock %}