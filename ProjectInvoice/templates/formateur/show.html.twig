{% extends 'base.html.twig' %}

{% block title %}Détails du Formateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="mb-4 text-primary text-center">Détails du Formateur</h2>

            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light">ID</th>
                            <td>{{ formateur.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Nom</th>
                            <td>{{ formateur.nom }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Prénom</th>
                            <td>{{ formateur.prenom }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">E-mail</th>
                            <td>{{ formateur.mail }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Adresse Postale</th>
                            <td>{{ formateur.adressePostal }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Code Postal</th>
                            <td>{{ formateur.codePostal }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Téléphone</th>
                            <td>{{ formateur.tel }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">SIRET</th>
                            <td>{{ formateur.siret }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_formateur_index') }}" class="btn btn-secondary px-4 py-2">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
                <a href="{{ path('app_formateur_edit', {'id': formateur.id}) }}" class="btn btn-primary px-4 py-2">
                    <i class="bi bi-pencil"></i> Modifier
                </a>
            </div>

            <div class="mt-3 text-center">
                {{ include('formateur/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}