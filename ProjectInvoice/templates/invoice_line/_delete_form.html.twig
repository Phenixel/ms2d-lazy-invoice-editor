<form method="post" action="{{ path('app_invoice_line_delete', {'id': invoice_line.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice_line.id) }}">

    <button type="submit" class="btn btn-danger px-4 py-2">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>