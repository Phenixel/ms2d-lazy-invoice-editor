



{% extends 'base.html.twig' %}

{% block title %}Modifier  InvoiceLine{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="mb-4 text-primary text-center">Modifier  InvoiceLine</h2>

            <div class="px-3">
                <form method="post">
                    <div class="row g-4">
                        {% for field in form %}
                            <div class="col-md-6">
                                <div class="form-group">
                                    {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                    {{ form_widget(field, {'attr': {'class': 'form-control p-2'}}) }}
                                    <div class="form-text text-muted">{{ form_errors(field) }}</div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary px-4 py-2">
                            <i class="bi bi-check-circle"></i> Mettre à jour
                        </button>
                    </div>
                </form>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_invoice_line_index') }}" class="btn btn-secondary px-4 py-2">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>

                {{ include('invoice_line/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
