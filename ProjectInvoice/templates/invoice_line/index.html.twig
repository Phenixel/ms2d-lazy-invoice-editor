{% extends 'base.html.twig' %}

{% block title %}InvoiceLine Index{% endblock %}

{% block body %}
    <!-- Header for the page -->
    <div class="container mt-4">
        <h1 class="mb-4 text-center text-primary">Liste des lignes de InvoiceLine</h1>

        <!-- Table for displaying invoice lines -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Lignes de InvoiceLine enregistrées</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Module</th>
                            <th>Date</th>
                            <th>Heures</th>
                            <th>Classe</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for invoice_line in invoice_lines %}
                        <tr>
                            <td>{{ invoice_line.id }}</td>
                            <td>{{ invoice_line.Module }}</td>
                            <td>{{ invoice_line.date ? invoice_line.date|date('Y-m-d') : '' }}</td>
                            <td>{{ invoice_line.hours }}</td>
                            <td>{{ invoice_line.class }}</td>
                            <td>{{ invoice_line.prix }}</td>
                            <td>
                                <a href="{{ path('app_invoice_line_show', {'id': invoice_line.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                <a href="{{ path('app_invoice_line_edit', {'id': invoice_line.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucune ligne de InvoiceLine trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Button to create new invoice line -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_invoice_line_new') }}" class="btn btn-success btn-lg">Créer une nouvelle ligne de InvoiceLine</a>
        </div>
    </div>
{% endblock %}