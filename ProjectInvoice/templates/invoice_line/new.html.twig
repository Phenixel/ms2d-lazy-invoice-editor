{% extends 'base.html.twig' %}

{% block title %}Nouvelle Ligne de Facture{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h2 class="mb-4 text-primary text-center">Créer une nouvelle ligne de Invoiceline</h2>

            <div class="px-3">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="row g-4">
                    {% for field in form %}
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(field, {'attr': {'class': 'form-control p-3'}}) }}
                                {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success px-4 py-2">
                        <i class="bi bi-check-circle"></i> {{ button_label|default('Ajouter') }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_invoice_line_index') }}" class="btn btn-secondary px-4 py-2">
                    <i class="bi bi-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}