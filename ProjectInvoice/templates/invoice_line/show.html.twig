{% extends 'base.html.twig' %}

{% block title %}Détails de la ligne de facture{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center text-primary">Détails de la ligne de facture</h1>

        <div class="card shadow-lg">
            <div class="card-header bg-info text-white">
                <h4 class="card-title mb-0">Informations de la facture</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light">Id</th>
                            <td>{{ invoice_line.id }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Module</th>
                            <td>{{ invoice_line.Module }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Date</th>
                            <td>{{ invoice_line.date ? invoice_line.date|date('Y-m-d') : 'N/A' }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Heures</th>
                            <td>{{ invoice_line.hours }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Classe</th>
                            <td>{{ invoice_line.class }}</td>
                        </tr>
                        <tr>
                            <th class="bg-light">Prix</th>
                            <td><strong class="text-success">{{ invoice_line.prix }} €</strong></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Boutons d'actions -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_invoice_line_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_invoice_line_edit', {'id': invoice_line.id}) }}" class="btn btn-warning text-white">Modifier</a>
            {{ include('invoice_line/_delete_form.html.twig', { 'attr': {'class': 'd-inline'} }) }}
        </div>
    </div>
{% endblock %}